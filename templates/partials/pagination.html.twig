{% if pages >= 1 %}
    <div class="d-flex justify-content-center">
        <ul class="pagination">
            <li class="page-item {% if page == 1 %}disabled{% endif %}">
                <a class="page-link" href="{{ path(route, additionalParams | merge({(paramName): page - 1})) }}">&laquo;</a>
            </li>
            {% for i in 1..pages %}
                <li class="page-item {% if page == i %}active{% endif %}">
                    <a class="page-link" href="{{ path(route, additionalParams | merge({(paramName): i})) }}">{{ i }}</a>
                </li>
            {% endfor %}
            <li class="page-item {% if page == pages %}disabled{% endif %}">
                <a class="page-link" href="{{ path(route, additionalParams | merge({(paramName): page + 1})) }}">&raquo;</a>
            </li>
        </ul>
    </div>
{% elseif pages == 0 %}

    <div class="d-flex justify-content-center">
        <ul class="pagination">
            <li class="page-item disabled">
                <a class="page-link">&laquo;</a>
            </li>
            <li class="page-item active">
                <a class="page-link">1</a>
            </li>


            <li class="page-item disabled">
                <a class="page-link">&raquo;</a>
            </li>
        </ul>
    </div>
{% endif %}