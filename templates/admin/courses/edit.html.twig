{% extends 'admin/base.html.twig' %}

{% block title %}Edit course{% endblock %}

{% form_theme form '/course/_collection.html.twig' %}

{% block body %}
    <div class="container">
        <h1 class="my-5">Edit course üñäÔ∏è</h1>

        {{ form_start(form) }}

        {% if not form.vars.valid %}
            <div class="alert alert-danger">
                {% for child in form.children %}
                    {% for error in child.vars.errors %}
                        {{ error.message }} <br>
                    {% endfor %}
                {% endfor %}
            </div>
        {% endif %}

        <div class="row">
            <div class="col-6">
                <div class="alert bg-transparent border-light">
                    <h2 class="alert-heading">Basic Information</h2>
                    <hr>
                    <div class="form-group">
                        {{ form_label(form.title) }}
                        {{ form_widget(form.title) }}
                    </div>

                    <div class="form-group">
                        {{ form_label(form.introduction) }}
                        {{ form_widget(form.introduction) }}
                    </div>

                    <div class="form-group">
                        {{ form_label(form.price) }}
                        {{ form_widget(form.price) }}
                    </div>


                </div>
            </div>

            <div class="col-6">
                <div class="alert bg-transparent border-light">
                    <h2 class="alert-heading">Details</h2>
                    <hr>
                    <div class="form-group">
                        {{ form_label(form.thumbnail) }}
                        {{ form_widget(form.thumbnail) }}
                    </div>

                    <div class="form-group">
                        {{ form_label(form.level) }}
                        {{ form_widget(form.level) }}
                    </div>

                    <div class="form-group">
                        {{ form_label(form.category) }}
                        {{ form_widget(form.category) }}
                    </div>

                    <div class="form-group">
                        {{ form_label(form.active) }}
                        {{ form_widget(form.active) }}
                    </div>


                    <button type="submit" class="btn btn-success">Save ‚úÖ</button>

                </div>
            </div>
        </div>

        <div class="alert b bg-transparent border-light">
            <div class="row">
                <h2 class="alert-heading">Chapters</h2>
                <hr class="mb-4">
                <div class="col-12">

                    {{ form_start(form) }}

                    {{ form_widget(form.chapters) }}

                    {{ form_end(form) }}

                </div>

            </div>
        </div>


    </div>
{% endblock %}

{% block javascripts %}

    <script src="/assets/js/course.js"></script>

{% endblock %}