{% extends 'base.html.twig' %}

{% block title %}{{ user.fullName }}{% endblock %}

{% block body %}

    <div class="container">
        <div class="row align-items-center my-5">
            <div class="col-md-3 text-center">
                <img src="{{ user.picture }}" class="avatar mb-3" alt="{{ user.fullName }}'s avatar">
                <br>
                {% if user.courses | length <= 1 %}
                    <span class="badge bg-dark">{{ user.courses | length}} course</span>
                {% endif %}
                {% if user.courses | length >= 2%}
                    <span class="badge bg-dark">{{ user.courses | length}} courses</span>
                {% endif %}

            </div>
            <div class="col-9">
                <h1>{{ user.fullName }}</h1>
                {% if user is same as(app.user) %}
                    <div class="mt-3">
                        <a href="" class="btn btn-outline-dark mr-2 mb-2">Edit my data</a>
                        <a href="" class="btn btn-outline-dark mb-2">Change my password</a>
                    </div>
                {% endif %}
            </div>
        </div>
        <hr class="my-5">
        <h2 class="my-5">{{ user.firstName }}'s courses</h2>
        {% if user.courses | length > 0 %}
            <div class="row my-5">
                {% for course in user.courses|reverse %}
                    {% include 'course/_card.html.twig' %}
                {% endfor %}
            </div>
        {% else %}
            <div class="alert bg-transparent border-light my-5">
                <p>
                    <strong>{{ user.fullName }}</strong> Did not post course yet..
                </p>
            </div>
        {% endif %}

    </div>

{% endblock %}