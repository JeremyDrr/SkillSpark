{% extends 'base.html.twig' %}

{% block title %}Sign In{% endblock %}

{% block body %}

    <div class="container">
        <div class="row my-5 py-5">
            <div class="col-md-4">&nbsp;</div>
            <div class="col-md-4">
                <div class="alert bg-transparent border-light py-3 px-3">
                    <h1 class="text-center">Login</h1>
                    <hr>

                    {% if hasError %}
                        <div class="bg-danger rounded-2 ps-2 py-2 pe-2 mb-3">The email address or the password is incorrect</div>
                    {% endif %}

                    <form action="{{ path('login') }}" method="post">
                        <div class="form-group">
                            <label for="email" class="form-label">Email Address</label>
                            <input type="text" name="_username" id="email" class="form-control bg-transparent mb-3" required value="{{username}}">
                        </div>
                        <div class="form-group">
                            <label for="password" class="form-label">Password</label>
                            <input type="password" name="_password" id="password" class="form-control bg-transparent mb-3" required>
                        </div>
                        <div class="text-center">
                            <button type="submit" class="btn btn-primary my-3">Sign In ➡️</button>
                        </div>
                        <div class="form-group">
                            <p class="text-center">You don't have an account yet? <a href="{{ path('signup') }}" id="signup">Create an account</a></p>
                            <p class="text-center"><a href="{{ path('user_forget_password') }}">Forgot password?</a></p>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
{% endblock %}