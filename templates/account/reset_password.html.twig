{% extends 'base.html.twig' %}

{% block title %}Reset Password{% endblock %}

{% block body %}
    <div class="content">
        <div class="container">
            <div class="row my-5 py-5">
                <div class="col-4 offset-4">
                    <div class="alert bg-transparent border-light py-3 px-3">
                        <div class="col-md-12">
                            <h1 class="text-center">Reset Password</h1>
                            <hr>
                            {% for child in form.children %}
                                {% for error in child.vars.errors %}
                                    <div class="bg-danger rounded-2 px-2 py-2 mb-3">
                                        {{ error.message }}
                                    </div>
                                {% endfor %}
                            {% endfor %}
                            {{ form_start(form) }}
                            <div class="form-group">
                                {{form_label(form.password)}}
                                {{form_widget(form.password)}}
                            </div>

                            <div class="form-group">
                                {{form_label(form.confirmPassword)}}
                                {{form_widget(form.confirmPassword)}}
                                {{ form_widget(form.token) }}
                            </div>

                            <div class="text-center">
                                <button type="submit" class="btn btn-primary my-3">Reset Password</button>
                            </div>
                            {{ form_end(form) }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}