{% block _course_chapters_entry_row %}
    {{ form_widget(form) }}
{% endblock %}

{% block _course_chapters_entry_widget %}
    <div class="form-group" id="block_{{id}}">
        {{ form_errors(form) }}
        <div class="row">
            <div class="col-11">
                <div class="row">
                    <div class="col">
                        {{ form_widget(form.title) }}
                        {{ form_errors(form.title) }}
                    </div>
                    <div class="col">
                        {{ form_widget(form.content) }}
                        {{ form_errors(form.content) }}
                    </div>
                </div>
            </div>
            <div class="col-1 text-center">
                <button type="button" data-action="delete" data-target="#block_{{id}}" class="btn btn-danger mx-auto">X</button>
            </div>
        </div>
    </div>
{% endblock %}
