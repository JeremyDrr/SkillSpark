{% extends 'base.html.twig' %}

{% block title %}Create course{% endblock %}

{% form_theme form '/course/_collection.html.twig' %}

{% block body %}
    <div class="container">
        <h1 class="my-5">Create course üñäÔ∏è</h1>

        {{ form_start(form) }}

        {% if not form.vars.valid %}
            <div class="alert alert-danger">
                {% for child in form.children %}
                    {% for error in child.vars.errors %}
                        {{ error.message }} <br>
                    {% endfor %}
                {% endfor %}
            </div>
        {% endif %}

        <div class="row">
            <div class="col-6">
                <div class="alert bg-transparent border-light">
                    <h2 class="alert-heading">Basic Information</h2>
                    <hr>
                    <div class="form-group">
                        {{ form_label(form.title) }}
                        {{ form_widget(form.title) }}
                    </div>

                    <div class="form-group">
                        {{ form_label(form.introduction) }}
                        {{ form_widget(form.introduction) }}
                    </div>

                    <div class="form-group">
                        {{ form_label(form.price) }}
                        {{ form_widget(form.price) }}
                    </div>

                    <div class="form-group">
                        {{ form_label(form.level) }}
                        {{ form_widget(form.level) }}
                    </div>

                </div>
            </div>

            <div class="col-6">
                <div class="alert bg-transparent border-light">
                    <h2 class="alert-heading">Details</h2>
                    <hr>
                    <div class="form-group">
                        {{ form_label(form.thumbnail) }}
                        {{ form_widget(form.thumbnail) }}
                    </div>

                    <div class="form-group mb-5">
                        {{ form_label(form.active) }}
                        {{ form_widget(form.active) }}
                    </div>

                    <button type="submit" class="btn btn-success">Save ‚úÖ</button>

                </div>
            </div>
        </div>

        <div class="row">

            {{ form_start(form) }}

            {{ form_widget(form) }}

            {{ form_end(form) }}

        </div>

    </div>
{% endblock %}

{% block javascripts %}

    <script src="/assets/js/course.js"></script>

{% endblock %}