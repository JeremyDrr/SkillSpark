{% extends 'base.html.twig' %}

{% block title %}Create a course{% endblock %}

{% form_theme form 'course/_collection.html.twig' %}

{% block body %}

    <div class="container">

        <div class="row my-5 py-5">
            <div class="row">
                <div class="col-10 offset-1">
                    <div class="alert bg-transparent border-light py-3 px-3">
                        <h1 class="text-center">Create a course</h1>
                        <hr>
                        {% for child in form.children %}
                            {% for error in child.vars.errors %}
                                <div class="bg-danger ps-2 py-2 pe-2">
                                    {{ error.message }} <br>
                                </div>
                            {% endfor %}
                        {% endfor %}
                        {{ form_start(form) }}

                        <div class="mb-3">
                            <div class="form-label">{{ form_label(form.title) }}</div>
                            {{ form_widget(form.title) }}
                        </div>

                        <div class="mb-3">
                            <div class="form-label">{{ form_label(form.introduction) }}</div>
                            {{ form_widget(form.introduction) }}
                        </div>

                        <div class="mb-3">
                            <div class="form-label">{{ form_label(form.price) }}</div>
                            {{ form_widget(form.price) }}
                        </div>

                        <div class="mb-3">
                            <div class="form-label">{{ form_label(form.thumbnail) }}</div>
                            {{ form_widget(form.thumbnail) }}
                        </div>

                        <div class="mb-3">
                            <div class="form-label">{{ form_label(form.level) }}</div>
                            {{ form_widget(form.level) }}
                        </div>

                        {{ form_row(form.chapters) }}



                        <div class="text-center">
                            <button type="submit" class="btn btn-success my-3">
                                Create course âœ…
                            </button>
                        </div>

                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}


{% block javascripts %}
    <script src="/assets/js/course.js"></script>
{% endblock %}